<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Sociable\Model\Location" collection="locations">
        <field name="id" id="true" />
        <field name="label" type="string" unique="true"/>
        <field name="name" type="string"/>
        <field name="sublocationsName" type="string"/>
        <reference-many field="sublocations" target-document="Sociable\Model\Location" mapped-by="parentLocation">
            <sort>
                <sort field="name" order="asc"/>
            </sort>
        </reference-many>
        <field name="parentType" type="string"/>
        <reference-one field="parentCountry" target-document="Sociable\Model\Country" inversed-by="locations"/>
        <reference-one field="parentLocation" target-document="Sociable\Model\Location" inversed-by="sublocations"/>
    </document>

</doctrine-mongo-mapping>